<html>
<head>
    <link rel="stylesheet" href="/main.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/calendario/2019/12">Mi Calendario</a>
    <a class="navbar-brand" href="/guardarropas">Mis Guardarropas</a>
    <a class="navbar-brand" href="/eventos">Mis Eventos</a>
    <a class="navbar-brand" href="/sugerencias">Calificación de sugerencias</a>
</nav>
<div class="content">
    <h3>
        Califique la sugerencia
    </h3>
    {{#with sugerencia}}
    <dl class="row">
        <dt class="col-sm-3">Accesorio</dt>
        <dd class="col-sm-9">
            {{accesorio.nombre}}
            {{accesorio.categoria}}
            {{accesorio.material}}
            {{accesorio.trama}}
            <img src="/remera.png" class="img-thumbnail"/>
        </dd>

        <dt class="col-sm-3">Prendas Superiores</dt>
        <dd class="col-sm-9">
            <dl class="row">
                {{#each prendasSuperiores}}
                <dd class="col-sm-12">
                    {{nombre}}
                    {{categoria}}
                    {{material}}
                    {{trama}}
                    <img src="/remera.png" class="img-thumbnail"/>
                </dd>
                {{/each}}
            </dl>
        </dd>

        <dt class="col-sm-3">Prenda Inferior</dt>
        <dd class="col-sm-9">
            {{prendaInferior.nombre}}
            {{prendaInferior.categoria}}
            {{prendaInferior.material}}
            {{prendaInferior.trama}}
            <img src="/remera.png" class="img-thumbnail"/>
        </dd>
        <dt class="col-sm-3">Calzado</dt>
        <dd class="col-sm-9">
            {{calzado.nombre}}
            {{calzado.categoria}}
            {{calzado.material}}
            {{calzado.trama}}
            <img src="/remera.png" class="img-thumbnail"/>
        </dd>
        <dt class="col-sm-3">Accesorio Cuello</dt>
        <dd class="col-sm-9">
            {{accesorioCuello.nombre}}
            {{accesorioCuello.categoria}}
            {{accesorioCuello.material}}
            {{accesorioCuello.trama}}
            <img src="/remera.png" class="img-thumbnail"/>
        </dd>
        <dt class="col-sm-3">Accesorio Manos</dt>
        <dd class="col-sm-9">
            {{accesorioManos.nombre}}
            {{accesorioManos.categoria}}
            {{accesorioManos.material}}
            {{accesorioManos.trama}}
            <img src="/remera.png" class="img-thumbnail"/>
        </dd>
    </dl>
    {{/with}}
    <form action="/sugerencias/{{sugerenciaId}}/calificacion" method="post" >
        <div class="form-group col-lg">
            <label>Elija la calificación del 1 al 5</label>
            <div class="rating">
                <span><input type="radio" name="puntuacion" id="str5" value="5"><label for="str5"></label></span>
                <span><input type="radio" name="puntuacion" id="str4" value="4"><label for="str4"></label></span>
                <span><input type="radio" name="puntuacion" id="str3" value="3"><label for="str3"></label></span>
                <span><input type="radio" name="puntuacion" id="str2" value="2"><label for="str2"></label></span>
                <span><input type="radio" name="puntuacion" id="str1" value="1"><label for="str1"></label></span>
            </div>
        </div>
        <button class="btn btn-primary" type="submit">Calificar</button>
    </form>
    {{#if error}}
    <div class="alert alert-danger err" role="alert">
        {{error}}
    </div>
    {{/if}}
</div>
</body>
{{#if error}}
<script>
    window.alert("Un error ha ocurrido")
</script>
{{/if}}
<script>
    $(document).ready(function(){
        $(".rating input:radio").attr("checked", false);

        $('.rating input').click(function () {
            $(".rating span").removeClass('checked');
            $(this).parent().addClass('checked');
        });
    });
</script>
</html>